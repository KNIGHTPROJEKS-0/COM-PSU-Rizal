{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "../..",
    "paths": {
      "@/*": [
        "./apps/webapp/*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/contexts/*": [
        "./contexts/*"
      ],
      "@/hooks/*": [
        "./hooks/*"
      ],
      "@/integrations/*": [
        "./integrations/*"
      ],
      "@/lib/*": [
        "./packages/shared/lib/*"
      ],
      "@/server/*": [
        "./server/*"
      ],
      "@/utils/*": [
        "./packages/shared/utils/*"
      ],
      "@/public/*": [
        "./public/*"
      ],
      "@com-psu-rizal/ui/*": [
        "./packages/ui/*"
      ],
      "@com-psu-rizal/shared/*": [
        "./packages/shared/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}