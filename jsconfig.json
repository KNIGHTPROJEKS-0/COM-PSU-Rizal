{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@contexts/*": [
        "contexts/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@integrations/*": [
        "integrations/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@server/*": [
        "server/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@public/*": [
        "public/*"
      ]
    }
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "node_modules/**",
    ".next",
    ".next/**",
    "dist",
    "dist/**",
    "build",
    "build/**",
    "out",
    "out/**",
    "externals",
    "externals/**",
    "integrations/**",
    "supabase/**",
    "apps/*/node_modules",
    "apps/*/node_modules/**",
    "packages/*/node_modules",
    "packages/*/node_modules/**",
    "lib/angular-like/**",
    "lib/angular-next/**",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.spec.js",
    "**/*.spec.jsx",
    ".git",
    ".git/**",
    ".vscode",
    ".vscode/**",
    "logs",
    "logs/**",
    "coverage",
    "coverage/**",
    "*.log",
    "**/.DS_Store",
    "**/Thumbs.db"
  ]
}