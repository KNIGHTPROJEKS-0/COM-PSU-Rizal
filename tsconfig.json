{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom",
      "dom.iterable",
      "es6",
      "es5"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@components/*": [
        "packages/shared-components/*"
      ],
      "@contexts/*": [
        "contexts/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@integrations/*": [
        "integrations/*"
      ],
      "@lib/*": [
        "packages/shared-lib/*"
      ],
      "@server/*": [
        "server/*"
      ],
      "@utils/*": [
        "packages/shared-utils/*"
      ],
      "@ui/*": [
        "packages/ui/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "rxjs": [
        "lib/rx-lite/index.ts"
      ],
      "rxjs/operators": [
        "lib/rx-lite/index.ts"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "app/**/*",
    "apps/webapp/**/*",
    "contexts/**/*",
    "hooks/**/*",
    "packages/shared-*/**/*",
    "packages/ui/**/*",
    "scripts/**/*",
    "server/**/*",
    "services/**/*",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "node_modules/**",
    ".next",
    ".next/**",
    "dist",
    "dist/**",
    "build",
    "build/**",
    "out",
    "out/**",
    "externals",
    "externals/**",
    "frameworks",
    "frameworks/**",
    "capacitor",
    "capacitor/**",
    "apps/*/node_modules",
    "apps/*/node_modules/**",
    "packages/*/node_modules",
    "packages/*/node_modules/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.d.ts",
    ".git",
    ".git/**",
    ".vscode",
    ".vscode/**",
    "logs",
    "logs/**",
    "coverage",
    "coverage/**",
    "*.log",
    "**/.DS_Store",
    "**/Thumbs.db"
  ]
}